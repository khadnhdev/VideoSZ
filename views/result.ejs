<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Kết quả Transcription & Summary</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/prismjs@1.29.0/themes/prism.min.css">
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/header') %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-12 mb-4">
        <a href="/" class="btn btn-secondary">&laquo; Trở về trang chủ</a>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-primary text-white">
            <h3>Thông tin video</h3>
          </div>
          <div class="card-body">
            <h5>Tên file: <%= video.original_filename %></h5>
            <div class="mt-3">
              <% if (video.video_path) { %>
                <video controls class="w-100">
                  <source src="/<%= video.video_path.replace('public/', '') %>" type="video/mp4">
                  Trình duyệt của bạn không hỗ trợ video tag.
                </video>
              <% } %>
            </div>
          </div>
        </div>
      </div>

      <div class="col-md-6 mb-4">
        <div class="card h-100">
          <div class="card-header bg-success text-white">
            <h3>Tóm tắt nội dung</h3>
          </div>
          <div class="card-body summary-content">
            <% if (video.summary) { %>
              <div id="summary-content" class="markdown-content">
                <%- video.summary.replace(/\n/g, '<br>') %>
              </div>
            <% } else { %>
              <p class="text-muted">Chưa có tóm tắt</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header bg-info text-white">
            <h3>Chi tiết về ý chính</h3>
          </div>
          <div class="card-body">
            <div id="detail-content" class="p-3 border rounded bg-light">
              <p class="text-center text-muted">Nhấp vào một ý chính từ phần tóm tắt để xem chi tiết</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-12 mb-4">
        <div class="card">
          <div class="card-header bg-secondary text-white">
            <h3>Nội dung Transcription đầy đủ</h3>
          </div>
          <div class="card-body">
            <% if (video.transcript) { %>
              <div class="transcript-content p-3 border rounded">
                <%= video.transcript %>
              </div>
            <% } else { %>
              <p class="text-muted">Chưa có transcription</p>
            <% } %>
          </div>
        </div>
      </div>
    </div>

    <div class="row mt-4">
      <div class="col-12">
        <div id="detailSection" class="mt-3">
          <div class="alert alert-info">
            <p class="mb-0">Nhấp vào một ý chính trong phần tóm tắt để xem phân tích chi tiết.</p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/marked@4.0.0/marked.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const marked = window.marked;
      const summaryContent = document.getElementById('summary-content');
      const detailContent = document.getElementById('detail-content');
      
      if (marked && summaryContent) {
        // Parse markdown content
        const rawContent = summaryContent.innerHTML.replace(/<br>/g, '\n');
        summaryContent.innerHTML = marked.parse(rawContent);

        // Add click event to key points
        const keyPoints = summaryContent.querySelectorAll('li');
        keyPoints.forEach(point => {
          point.style.cursor = 'pointer';
          point.classList.add('hoverable-point');
          
          point.addEventListener('click', async function() {
            try {
              // Hiển thị loading spinner
              detailContent.innerHTML = `
                <div class="d-flex justify-content-center my-5">
                  <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                  </div>
                  <span class="ms-3">Đang phân tích ý chính...</span>
                </div>
              `;

              // Lấy nội dung của ý chính
              const keyPointText = this.textContent.trim();
              console.log('Đang triển khai ý chính:', keyPointText);
              
              // Gọi API để lấy chi tiết về ý chính
              const response = await fetch(`/api/detail/<%= video.id %>?keyword=${encodeURIComponent(keyPointText)}`);
              
              if (!response.ok) {
                throw new Error('Error fetching details');
              }
              
              const data = await response.json();
              
              if (data.success) {
                // Hiển thị kết quả phân tích (đã định dạng Markdown)
                detailContent.innerHTML = `
                  <div class="card">
                    <div class="card-header bg-info text-white">
                      <h4>Phân tích chi tiết</h4>
                    </div>
                    <div class="card-body markdown-content">
                      ${marked.parse(data.detail)}
                    </div>
                  </div>
                `;
              }
            } catch (error) {
              console.error('Error:', error);
              detailContent.innerHTML = `
                <div class="alert alert-danger">
                  <p class="mb-0">Đã xảy ra lỗi khi phân tích ý chính</p>
                </div>
              `;
            }
          });
        });
      }
    });
  </script>
</body>
</html> 